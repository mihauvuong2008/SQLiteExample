<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_wordIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/idea" />

    <TextView
        android:id="@+id/textView_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_wordIcon"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageView_wordIcon"
        android:layout_toRightOf="@+id/imageView_wordIcon"
        android:text="TextView"
        android:textColor="@color/word_text_color"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/textView_mean_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_wordIcon"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imageView_wordIcon"
        android:layout_toRightOf="@+id/imageView_wordIcon"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        android:textSize="14dp" />


</RelativeLayout>